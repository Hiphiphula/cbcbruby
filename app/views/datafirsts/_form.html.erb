<%= form_with(model: datafirst) do |form| %>
  <% if datafirst.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(datafirst.errors.count, "error") %> prohibited this datafirst from being saved:</h2>

      <ul>
        <% datafirst.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class: 'field form-group'>
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name, class:"form-control" , placeholder:"first name"%>
  </div>

  <div class= 'field form-group'>
    <%= form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name , class:"form-control", placeholder:"last name"%>
  </div>

  <div class= 'field form-group'>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email , class:"form-control", placeholder:"email"%>
  </div>

  <div class= 'field form-group'>
    <%= form.label :phone, style: "display: block" %>
    <%= form.text_field :phone , class:"form-control", placeholder:"Phone number"%>
  </div>

  <div class= 'field form-group'>
    <%= form.label :twitter, style: "display: block" %>
    <%= form.text_field :twitter , class:"form-control", placeholder:"Twitter"%>
  </div>

  <div class= 'field form-group'>
    <%= form.number_field :user_id ,id: :datafirst_user_id, class:"form-control", value: current_user.id, type: :hidden%>
  </div>
  <!-- <%= current_user.id %>  -->
  <!-- <%= current_user.inspect %> -->
<br/>
  <div class="actions">
    <%= form.submit class:"btn btn-secondary" %>
  </div>
<% end %>
